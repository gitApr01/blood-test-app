generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  isActive  Boolean  @default(true)
  entries   Entry[]  @relation("collectedBy")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Test {
  id         String      @id @default(cuid())
  name       String
  rate       Float
  isActive   Boolean     @default(true)
  entryTests EntryTest[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Entry {
  id             String         @id @default(cuid())
  patientName    String
  age            Int?
  sex            String?
  total          Float
  advance        Float     @default(0)
  paid           Float     @default(0)
  due            Float
  commissionDue  Float
  commissionPaid Float     @default(0)
  status         DeliveryStatus @default(NOT_DELIVERED)
  collectedById  String
  collectedBy    User      @relation("collectedBy", fields: [collectedById], references: [id])
  entryTests     EntryTest[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model EntryTest {
  id      String @id @default(cuid())
  entryId String
  testId  String
  rate    Float

  entry   Entry @relation(fields: [entryId], references: [id])
  test    Test  @relation(fields: [testId], references: [id])
}

model CommissionLog {
  id        String   @id @default(cuid())
  entryId   String
  changedBy String
  oldValue  Float
  newValue  Float
  reason    String?
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}

enum DeliveryStatus {
  DELIVERED
  NOT_DELIVERED
  PARTIAL
}
